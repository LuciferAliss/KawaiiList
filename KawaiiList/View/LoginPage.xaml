<Window x:Class="KawaiiList.View.LoginPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KawaiiList.View"
        mc:Ignorable="d"
        Title="LoginPage" Height="550" Width="800"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen"
        MouseDown="Window_MouseDoun">

    <Border CornerRadius="12">

        <Border.Background>
            <ImageBrush ImageSource="/Resources/Images/BGLoginPage.png" 
                        Stretch="None"/>
        </Border.Background>
        
        <Border CornerRadius="12"
                BorderThickness="3"
                Opacity="0.95">

            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="{StaticResource BorderWindowBlueColor}" Offset="0"/>
                    <GradientStop Color="{StaticResource BorderPurplWindowPinkColor}" Offset="0.75"/>
                    <GradientStop Color="{StaticResource BorderWindowPurpleColor}" Offset="1"/>
                </LinearGradientBrush>
            </Border.BorderBrush>

            <Border.Background>
                <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                    <GradientStop Color="{StaticResource BGGradientDarkBlueColor}" Offset="0"/>
                    <GradientStop Color="{StaticResource BGGradientDarkLiteBlueColor}" Offset="0.75"/>
                </LinearGradientBrush>
            </Border.Background>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="45"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="40"/>
                        <ColumnDefinition Width="40"/>
                        <ColumnDefinition Width="15"/>
                    </Grid.ColumnDefinitions>



                    <Button Grid.Column="1"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Style="{StaticResource MinimizeButtonControlPanelStyle}"/>

                    <Button Grid.Column="2" 
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Style="{StaticResource CloseButtonControlPanelStyle}"/>

                </Grid>

                <StackPanel Width="250"
                            Grid.Row="2"
                            Orientation="Vertical"
                            Margin="0,35,0,0">

                    <Image Source="/Resources/Images/Logo.png"
                           Width="100"
                           Height="100"/>

                    <TextBlock Text="KawaiiList"
                               HorizontalAlignment="Center"
                               Style="{StaticResource NameCompanyTextBlockStyle}"/>

                    <TextBlock Text="Логин"
                               Margin="0,35,0,0"
                               Style="{StaticResource FieldTextBlockStyle}"/>

                    <TextBox Margin="0,5,0,0"
                             Style="{StaticResource LoginTextBoxStyle}"/>

                    <TextBlock Text="Пароль"
                               Margin="0,15,0,0"
                               Style="{StaticResource FieldTextBlockStyle}"/>

                    <PasswordBox Margin="0,5,0,0"
                                 Style="{StaticResource PasswordTextBoxStyle}"/>

                    <Button Content="Войти"
                            Margin="0,50,0,0"
                            Style="{StaticResource AutorithationButtonStyle}"/>

                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                Margin="0,15,0,0">
                    
                        <TextBlock Text="Забыл пароль?"
                                   Cursor="Hand"
                                   Style="{StaticResource SmallTextBlockStyle}"/>
                    
                        <TextBlock Text="Создать аккаунт"
                                   Cursor="Hand"
                                   Margin="8,0,0,0"
                                   Style="{StaticResource SmallTextBlockStyle}"/>
                
                    </StackPanel>
                
                </StackPanel>

            </Grid>
        
        </Border>
    </Border>
</Window>
