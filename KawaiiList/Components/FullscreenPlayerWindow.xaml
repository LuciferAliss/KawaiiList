<Window x:Class="KawaiiList.Components.FullscreenPlayerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KawaiiList.Components"
        mc:Ignorable="d"
        Title="FullscreenPlayerWindow"
        xmlns:views="clr-namespace:KawaiiList.Views"
        xmlns:viewmodel="clr-namespace:KawaiiList.ViewModels"
        d:DataContext="{d:DesignInstance viewmodel:WatchAnimeViewModel}"
        xmlns:vlc="clr-namespace:LibVLCSharp.WPF;assembly=LibVLCSharp.WPF"
        xmlns:materialdesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        WindowState = "Maximized"
        WindowStyle = "None"
        ResizeMode = "NoResize"
        AllowsTransparency = "False"
        Background = "Black">

    <views:WatchAnimeView/>

</Window>
