<UserControl x:Class="KawaiiList.Components.TitleAnimeListComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KawaiiList.Components"
             mc:Ignorable="d"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0"
                Padding="10"
                BorderThickness="6"
                Background="{StaticResource NavigationBarBackground}"
                BorderBrush="#252A36"
                CornerRadius="7">

            <StackPanel>

                <TextBlock Text="Списки"
                           Style="{StaticResource BaseTextBlockStyle}"
                           Foreground="{StaticResource TextColor}"
                           FontSize="17"
                           Margin="0,0,0,10"/>

                <ListBox HorizontalContentAlignment="Stretch"
                         SelectedItem="{Binding SelectedTypeStatus}">
                    <ListBoxItem MinWidth="150">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Все"
                                       Grid.Column="0"
                                       HorizontalAlignment="Left" />
                            <TextBlock Text="0"
                                       Grid.Column="1"
                                       HorizontalAlignment="Right" />
                        </Grid>
                    </ListBoxItem>

                    <ListBoxItem MinWidth="150">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Запланировано"
                                       Grid.Column="0"
                                       HorizontalAlignment="Left" />
                            <TextBlock Text="0"
                                       Grid.Column="1"
                                       HorizontalAlignment="Right" />
                        </Grid>
                    </ListBoxItem>

                    <ListBoxItem MinWidth="150">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Смотрю"
                                       Grid.Column="0"
                                       HorizontalAlignment="Left" />
                            <TextBlock Text="0"
                                       Grid.Column="1"
                                       HorizontalAlignment="Right" />
                        </Grid>
                    </ListBoxItem>

                    <ListBoxItem MinWidth="150">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Пересматриваю"
                                       Grid.Column="0"
                                       HorizontalAlignment="Left" />
                            <TextBlock Text="0"
                                       Grid.Column="1"
                                       HorizontalAlignment="Right" />
                        </Grid>
                    </ListBoxItem>

                    <ListBoxItem MinWidth="150">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Отложенно"
                                       Grid.Column="0"
                                       HorizontalAlignment="Left" />
                            <TextBlock Text="0"
                                       Grid.Column="1"
                                       HorizontalAlignment="Right" />
                        </Grid>
                    </ListBoxItem>

                    <ListBoxItem MinWidth="150">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Брошено"
                                       Grid.Column="0"
                                       HorizontalAlignment="Left" />
                            <TextBlock Text="0"
                                       Grid.Column="1"
                                       HorizontalAlignment="Right" />
                        </Grid>
                    </ListBoxItem>

                    <ListBoxItem MinWidth="150">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Любимое"
                                       Grid.Column="0"
                                       HorizontalAlignment="Left" />
                            <TextBlock Text="0"
                                       Grid.Column="1"
                                       HorizontalAlignment="Right" />
                        </Grid>
                    </ListBoxItem>
                </ListBox>
            </StackPanel>


        </Border>

        <Grid Grid.Column="1"
              Margin="20,0,0,0">

            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBox Grid.Row="0"
                     HorizontalAlignment="Stretch"
                     VerticalAlignment="Top"
                     materialDesign:HintAssist.Hint="Поиск"
                     materialDesign:TextFieldAssist.HasClearButton="True"
                     Foreground="{StaticResource TextColor}"
                     FontSize="17"
                     Style="{StaticResource MaterialDesignFilledTextBox}" />

            <ItemsControl Grid.Row="1"
                          Margin="0,20,0,0"
                          ItemsSource="{Binding AnimeTitle}"
                          ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                          ScrollViewer.VerticalScrollBarVisibility="Disabled"
                          ScrollViewer.CanContentScroll="False">

                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <VirtualizingStackPanel/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="5"
                                Padding="10"
                                CornerRadius="5"
                                HorizontalAlignment="Center"
                                Width="750">

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Постер аниме -->
                                <Image Grid.Column="0"
                                       Width="100"
                                       Height="150"
                                       Stretch="UniformToFill"
                                       Source="{Binding Posters.Original.Url}"/>

                                <!-- Информация об аниме -->
                                <StackPanel Grid.Column="1"
                                            Margin="10,0,0,0">
                                    <TextBlock Text="{Binding Names.Ru}"
                                               Foreground="{StaticResource TextColor}"
                                               FontWeight="Bold"
                                               FontSize="26"
                                               TextWrapping="Wrap"/>

                                    <TextBlock FontSize="16"
                                               Foreground="LightGray"
                                               Margin="0,5,0,0">

                                        <TextBlock.Text>
                                            <MultiBinding StringFormat="{}{0} эп. - {1} {2}">
                                                <Binding Path="Player.Episodes.Last" />
                                                <Binding Path="Season.String" />
                                                <Binding Path="Season.Year" />
                                            </MultiBinding>
                                        </TextBlock.Text>

                                    </TextBlock>

                                    <TextBlock Text="{Binding GenresText}"
                                               FontSize="14"
                                               Margin="0,10,0,0"
                                               TextWrapping="Wrap"
                                               Foreground="LightSlateGray"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Grid>

    </Grid>

</UserControl>
