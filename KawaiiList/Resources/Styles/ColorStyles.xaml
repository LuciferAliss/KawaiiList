<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--// Цвета для кнопки закрытия на окнах авторизации //-->
    <SolidColorBrush x:Key="CloseBtnNormalColor" Color="#DA34AE"/>
    <SolidColorBrush x:Key="CloseBtnHoverColor" Color="#9c2489"/>

    <!--// Цвета для кнопки сворачивания окна на окнах авторизации //-->
    <SolidColorBrush x:Key="MinimizeBtnNormalColor" Color="#28AEED"/>
    <SolidColorBrush x:Key="MinimizeBtnHoverColor" Color="#278BEF"/>

    <!--// Цвета для кнопки авторизации //-->
    <SolidColorBrush x:Key="AutorithationBtnNormalColor" Color="#462AD8"/>
    <SolidColorBrush x:Key="AutorithationBtnHoverColor" Color="#26AEED"/>

    <!--// Цвета для рамки окна приложения //-->
    <Color x:Key="BorderWindowBlueColor">#462AD8</Color>
    <Color x:Key="BorderPurplWindowPinkColor">#DA34AE</Color>
    <Color x:Key="BorderWindowPurpleColor">#8A16C1</Color>

    <!--// Цвета для фона окна //-->
    <Color x:Key="BGGradientDarkBlueColor">#060531</Color>
    <Color x:Key="BGGradientDarkLiteBlueColor">#1B1448</Color>
    
    <!--// Цвета для навигационной панели //-->
    <Color x:Key="BGNavegateColor1">#0B094C</Color>
    <Color x:Key="BGNavegateColor2">#211E7D</Color>

    <!-- Цветовая схема -->
    <SolidColorBrush x:Key="PrimaryColor" Color="#8B5CF6"/>
    <SolidColorBrush x:Key="DarkBackground" Color="#1A1F2C"/>
    <SolidColorBrush x:Key="NavigationBarBackground" Color="#2D3748"/>
    <SolidColorBrush x:Key="AccentColor" Color="#F97316"/>
    <SolidColorBrush x:Key="CardBackground" Color="#2D3748"/>
    <SolidColorBrush x:Key="TextColor" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="SecondaryTextColor" Color="#CBD5E0"/>

</ResourceDictionary>