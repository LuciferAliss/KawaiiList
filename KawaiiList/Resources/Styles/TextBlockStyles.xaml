<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--// Базовый стиль для текста //-->
    <Style TargetType="TextBlock" x:Key="BaseTextBlockStyle">
        <Setter Property="FontFamily" Value="Montserrat"/>
        <Setter Property="FontWeight" Value="Medium"/>
    </Style>
    
    <!--// Стиль для названия проекта в авторизации //-->
    <Style TargetType="TextBlock" x:Key="NameCompanyTextBlockStyle" BasedOn="{StaticResource BaseTextBlockStyle}">
        <Setter Property="FontSize" Value="25"/>
        <Setter Property="Foreground" Value="White"/>
    </Style>
    
    <!--// Стиль для подписи полей для ввода //-->
    <Style TargetType="TextBlock" x:Key="FieldTextBlockStyle" BasedOn="{StaticResource BaseTextBlockStyle}">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Foreground" Value="DarkGray"/>
    </Style>
    
    <!--// Стиль для подписи полей для ввода //-->
    <Style TargetType="TextBlock" x:Key="SmallTextBlockStyle" BasedOn="{StaticResource BaseTextBlockStyle}">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Foreground" Value="White"/>
    </Style>
    
    
    
</ResourceDictionary>