<UserControl x:Class="KawaiiList.Views.SignUpView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KawaiiList.Views"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:viewmodel="clr-namespace:KawaiiList.ViewModels" 
             d:DataContext="{d:DesignInstance viewmodel:SignUpViewModel}"
             mc:Ignorable="d">

    <Border BorderThickness="3"
            Padding="25"
            Background="{StaticResource DarkBackground}">

        <Border.BorderBrush>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="{StaticResource BorderWindowBlueColor}" Offset="0"/>
                <GradientStop Color="{StaticResource BorderPurplWindowPinkColor}" Offset="0.75"/>
                <GradientStop Color="{StaticResource BorderWindowPurpleColor}" Offset="1"/>
            </LinearGradientBrush>
        </Border.BorderBrush>

        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0"
                       Margin="10,10"
                       Style="{StaticResource BaseTextBlockStyle}"
                       Foreground="{StaticResource TextColor}"
                       FontSize="27"
                       Text="Регистрация"/>

            <TextBox Grid.Row="1"
                     Margin="10,0"
                     HorizontalAlignment="Stretch"
                     Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                     materialDesign:HintAssist.Hint="Имя пользователя"
                     Text=""
                     FontSize="14"
                     Foreground="{StaticResource TextColor}"/>

            <TextBox Grid.Row="2"
                     Margin="10,10"
                     HorizontalAlignment="Stretch"
                     Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                     materialDesign:HintAssist.Hint="Email"
                     Text=""
                     FontSize="14"
                     Foreground="{StaticResource TextColor}"/>

            <TextBox Grid.Row="3"
                     HorizontalAlignment="Stretch"
                     Margin="10,10"
                     Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                     materialDesign:HintAssist.Hint="Пароль"
                     Text=""
                     FontSize="14"
                     Foreground="{StaticResource TextColor}"/>

            <TextBox Grid.Row="4"
                     HorizontalAlignment="Stretch"
                     Margin="10,10"
                     Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                     materialDesign:HintAssist.Hint="Потвердите пароль"
                     Text=""
                     FontSize="14"
                     Foreground="{StaticResource TextColor}"/>

            <TextBlock Grid.Row="5"
                       Margin="10,5"
                       HorizontalAlignment="Center"
                       Cursor="Hand"
                       Style="{StaticResource BaseTextBlockStyle}"
                       Foreground="{StaticResource SecondaryTextColor}"
                       Text="У меня уже есть аккаунт">
                
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="PreviewMouseDown">
                        <i:InvokeCommandAction Command="{Binding SignInCommand}"/>
                    </i:EventTrigger>
                </i:Interaction.Triggers>
                
            </TextBlock>

            <Button Grid.Row="6"
                    HorizontalAlignment="Center"
                    Margin="10,10"
                    Content="Зарегистрироваться"
                    Command="{Binding RegisterCommand}"/>

            <TextBlock Grid.Row="7"
                       Margin="10,5"
                       HorizontalAlignment="Center"
                       Cursor="Hand"
                       FontSize="9"
                       Style="{StaticResource BaseTextBlockStyle}"
                       Foreground="{StaticResource SecondaryTextColor}"
                       Text="Я не хочу пока регестироваться">
                
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="PreviewMouseDown">
                        <i:InvokeCommandAction Command="{Binding CloseModalCommand}"/>
                    </i:EventTrigger>
                </i:Interaction.Triggers>
                
            </TextBlock>

        </Grid>
    </Border>

</UserControl>
