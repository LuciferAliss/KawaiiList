<UserControl x:Class="KawaiiList.Views.ProfileView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KawaiiList.Views" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:viewmodels="clr-namespace:KawaiiList.ViewModels"
             xmlns:components="clr-namespace:KawaiiList.Components"
             d:DataContext="{d:DesignInstance Type=viewmodels:ProfileViewModel}"
             mc:Ignorable="d">
    
    <Grid>

        <Grid.Resources>
            <DataTemplate DataType="{x:Type viewmodels:TitleAnimeListViewModel}">
                <components:TitleAnimeListComponent/>
            </DataTemplate>
        </Grid.Resources>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>


            <Grid Grid.Row="0"
                  MaxHeight="240">

                <materialDesign:Card Padding="0"
                                     UniformCornerRadius="25">
                    <Image Source="{Binding BannerUrl}"
                           Stretch="UniformToFill"
                           VerticalAlignment="Center"/>
                </materialDesign:Card>

                <Border CornerRadius="50,50,0,0">
                    <Border.Background>
                        <ImageBrush ImageSource="{Binding BannerUrl}" 
                                    Stretch="UniformToFill"/>
                    </Border.Background>
                </Border>

            </Grid>

            <Border Grid.Row="1"
                    Padding="10"
                    Background="#252A36">

                <Grid>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <Image Grid.Column="0"
                           MaxWidth="45"
                           Source="{Binding AvatarUrl}"/>

                    <TextBlock Grid.Column="1"
                               Style="{StaticResource BaseTextBlockStyle}"
                               FontSize="24"
                               Foreground="{StaticResource TextColor}"
                               Margin="15,7,0,0"
                               Text="{Binding Nickname}"
                               VerticalAlignment="Center"/>

                    <Button Grid.Column="2"
                            Style="{StaticResource MaterialDesignOutlinedButton}"
                            BorderBrush="White"
                            Foreground="White"
                            Margin="15,4,0,0"
                            Content="Редактировать"
                            HorizontalAlignment="Right"/>


                </Grid>
                
            </Border>

            <Border Grid.Row="2"
                    BorderThickness="0,1,0,0"
                    BorderBrush="White"
                    Background="#252A36">

                <TabControl Style="{StaticResource MaterialDesignTabControl}"
                            SelectedIndex="{Binding SelectedDayIndex, Mode=TwoWay}">

                    <TabItem Header="Тайтлы"
                             Height="30"
                             Padding="0"/>

                    <TabItem Header="Отслеживаемые"
                             Height="30"
                             Padding="0"/>
                    
                </TabControl>

            </Border>

        </Grid>

        <ContentControl Grid.Row="1"
                        Margin="0,15,0,0"
                        Content="{Binding CurrentViewModel}"/>

    </Grid>
    
</UserControl>
