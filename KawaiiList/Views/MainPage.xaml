<Window x:Class="KawaiiList.MainPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KawaiiList"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:models="clr-namespace:KawaiiList.Models.Anilibria"
        xmlns:viewModels="clr-namespace:KawaiiList.ViewModels.MainVm"
        d:DataContext="{d:DesignInstance viewModels:MainViewModel}"
        Title="MainPage" Height="720" Width="1280"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True">

    <Border CornerRadius="12"
            BorderThickness="3">

        <Border.BorderBrush>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="{StaticResource BorderWindowBlueColor}" Offset="0"/>
                <GradientStop Color="{StaticResource BorderPurplWindowPinkColor}" Offset="0.75"/>
                <GradientStop Color="{StaticResource BorderWindowPurpleColor}" Offset="1"/>
            </LinearGradientBrush>
        </Border.BorderBrush>

        <Grid>
            <Grid.ColumnDefinitions>
                <!--// Навигационная панель //-->
                <ColumnDefinition Width="250"/>
                <!--// Основная страница //-->
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Боковая панель -->
            <Border Grid.Column="0"
                    Background="#252A36"
                    BorderThickness="0,0,0,0"
                    CornerRadius="12,0,0,12">
                <DockPanel>
                    <!-- Заголовок сайдбара -->
                    <Border DockPanel.Dock="Top"
                            Margin="0,30,0,0"
                            Height="70"
                            Background="{StaticResource NavigationBarBackground}">
                        
                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Center">
                            <Image Source="/Resources/Images/Logo.png"
                                   Width="52"
                                   Height="57"/>
                            <TextBlock Text="KawaiiList"
                                       FontSize="35"
                                       FontWeight="Bold"
                                       VerticalAlignment="Center"
                                       Padding="10,0,0,0"
                                       Foreground="{StaticResource PrimaryColor}"/>
                        </StackPanel>
                    </Border>
                    
                    

                    <!-- Навигационное меню -->
                    <StackPanel Margin="0,10,0,0">
                        <RadioButton Style="{DynamicResource MaterialDesignTabRadioButtonLeft}"
                                     IsChecked="True"
                                     HorizontalContentAlignment="Left"
                                     FontSize="20"
                                     Margin="0,5,0,5">      
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Home"
                                                         Foreground="White"
                                                         Height="20"
                                                         Width="20"
                                                         VerticalAlignment="Center"/>
                                <TextBlock Text="Главная"
                                           Style="{StaticResource BaseTextBlockStyle}"
                                           Foreground="White"
                                           Margin="4,0,0,0"/>
                            </StackPanel>
                        </RadioButton>

                        <RadioButton Style="{DynamicResource MaterialDesignTabRadioButtonLeft}"
                                     HorizontalContentAlignment="Left"
                                     FontSize="20"
                                     Margin="0,5,0,5">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="NewBox"
                                                         Foreground="White"
                                                         Height="20"
                                                         Width="20"
                                                         VerticalAlignment="Center"/>
                                <TextBlock Text="Новинки"
                                           Style="{StaticResource BaseTextBlockStyle}"
                                           Foreground="White"
                                           Margin="4,0,0,0"/>
                            </StackPanel>
                        </RadioButton>

                        <RadioButton Style="{DynamicResource MaterialDesignTabRadioButtonLeft}"
                                     HorizontalContentAlignment="Left"
                                     FontSize="20"
                                     Margin="0,5,0,5">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Star"
                                                         Foreground="White"
                                                         Height="20"
                                                         Width="20"
                                                         VerticalAlignment="Center"/>
                                <TextBlock Text="Популярное"
                                           Style="{StaticResource BaseTextBlockStyle}"
                                           Foreground="White"
                                           Margin="4,0,0,0"/>
                            </StackPanel>
                        </RadioButton>

                        <RadioButton Style="{DynamicResource MaterialDesignTabRadioButtonLeft}"
                                     HorizontalContentAlignment="Left"
                                     FontSize="20"
                                     Margin="0,5,0,5">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Clock"
                                                         Foreground="White"
                                                         Height="20"
                                                         Width="20"
                                                         VerticalAlignment="Center"/>
                                <TextBlock Text="Недавние"
                                           Style="{StaticResource BaseTextBlockStyle}"
                                           Foreground="White"
                                           Margin="4,0,0,0"/>
                            </StackPanel>
                        </RadioButton>

                        <RadioButton Style="{DynamicResource MaterialDesignTabRadioButtonLeft}"
                                     HorizontalContentAlignment="Left"
                                     FontSize="20"
                                     Margin="0,5,0,5">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Heart"
                                                         Foreground="White"
                                                         Height="20"
                                                         Width="20"
                                                         VerticalAlignment="Center"/>
                                <TextBlock Text="Избранное"
                                           Style="{StaticResource BaseTextBlockStyle}"
                                           Foreground="White"
                                           Margin="4,0,0,0"/>
                            </StackPanel>
                        </RadioButton>

                        <TextBlock Text="Мой аккаунт"
                                   Margin="42,30,0,2"
                                   Foreground="{StaticResource SecondaryTextColor}"
                                   FontSize="22"/>

                        <RadioButton Style="{DynamicResource MaterialDesignTabRadioButtonLeft}"
                                     HorizontalContentAlignment="Left"
                                     FontSize="20"
                                     Margin="0,5,0,5">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="User"
                                                         Foreground="White"
                                                         Height="20"
                                                         Width="20"
                                                         VerticalAlignment="Center"/>
                                <TextBlock Text="Избранное"
                                           Style="{StaticResource BaseTextBlockStyle}"
                                           Foreground="White"
                                           Margin="4,0,0,0"/>
                            </StackPanel>
                        </RadioButton>

                        <RadioButton Style="{DynamicResource MaterialDesignTabRadioButtonLeft}"
                                     HorizontalContentAlignment="Left"
                                     FontSize="20"
                                     Margin="0,5,0,5">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Settings"
                                                         Foreground="White"
                                                         Height="20"
                                                         Width="20"
                                                         VerticalAlignment="Center"/>
                                <TextBlock Text="Настройки"
                                           Style="{StaticResource BaseTextBlockStyle}"
                                           Foreground="White"
                                           Margin="4,0,0,0"/>
                            </StackPanel>
                        </RadioButton>

                    </StackPanel>
                </DockPanel>
            </Border>

            <!-- Основной контент -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="70"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!--// Панель управления //-->
                <Border CornerRadius="0,12,0,0"
                        Background="#252A36">
                    <StackPanel Orientation="Horizontal"  HorizontalAlignment="Right">

                        <Button Style="{DynamicResource MaterialDesignFlatButton}"
                                Height="30"
                                Width="60">
                            <materialDesign:PackIcon Kind="minus"
                                                     Foreground="White"
                                                     Height="20"
                                                     Width="20"
                                                     VerticalAlignment="Center"/>
                        </Button>

                        <Button Style="{DynamicResource MaterialDesignFlatButton}"
                                Height="30"
                                Width="60">
                            <materialDesign:PackIcon Kind="cropsquare"
                                                     Foreground="White"
                                                     Height="15"
                                                     Width="15"
                                                     VerticalAlignment="Center"/>
                        </Button>

                        <Button Style="{DynamicResource MaterialDesignFlatButton}"
                                Height="30"
                                Width="60"
                                Margin="0,0,10,0">
                            <materialDesign:PackIcon Kind="close"
                                                     Foreground="White"
                                                     Height="20"
                                                     Width="20"
                                                     VerticalAlignment="Center"/>       
                        </Button>
                        
                        
                    </StackPanel>
                </Border>
                
                <!-- Верхняя навигационная панель -->
                <Border Grid.Row="1"
                        Background="{StaticResource NavigationBarBackground}">
                    
                    <Grid Margin="20,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Поиск -->
                        <TextBox Style="{DynamicResource MaterialDesignTextBox}"
                                 Background="#1A1F2C"
                                 materialDesign:TextFieldAssist.TextFieldCornerRadius="5"
                                 materialDesign:TextFieldAssist.UnderlineCornerRadius="12"
                                 materialDesign:HintAssist.Hint="Поиск аниме..."
                                 materialDesign:HintAssist.HintOpacity="0.7"
                                 materialDesign:TextFieldAssist.LeadingIcon="Magnify"
                                 BorderThickness="1,1,1,1"
                                 Height="40"
                                 Width="400"
                                 HorizontalAlignment="Left"
                                 FontSize="20"
                                 Padding="40,0,0,0"
                                 VerticalContentAlignment="Center"
                                 FontFamily="Montserrat"
                                 FontStretch="Normal"
                                 Foreground="{StaticResource TextColor}"
                                 Grid.Column="0"/>

                        <materialDesign:PackIcon Kind="Magnify"
                                                 Width="24"
                                                 Height="24"
                                                 Foreground="{StaticResource TextColor}"
                                                 Opacity="0.7"
                                                 HorizontalAlignment="Left"
                                                 VerticalAlignment="Center"
                                                 Margin="12,0,0,0"
                                                 Grid.Column="0"/>

                        <!-- Профиль -->
                        <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                            <TextBlock Style="{DynamicResource MaterialDesignBody1TextBlock}"
                                       Text="LuciferAliss"
                                       VerticalAlignment="Center"
                                       FontSize="20"
                                       FontFamily="Montserrat"
                                       Foreground="{StaticResource TextColor}"
                                       Margin="0,0,10,0"/>
                            <Button Style="{DynamicResource MaterialDesignFloatingActionButton}"
                                    Width="40"
                                    Height="40">
                                <materialDesign:PackIcon Kind="Account"
                                                         Width="25"
                                                         Height="25"/>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Основной контент страницы -->
                <Border Grid.Row="2"
                        Background="{StaticResource DarkBackground}"
                        CornerRadius="0,0,12,0">
                    <StackPanel Margin="25">

                        <TextBlock Text="Новинки"   
                                   Foreground="{StaticResource TextColor}"
                                   FontSize="30"
                                   Style="{StaticResource BaseTextBlockStyle}"/>

                        <!--<ListView ItemsSource="{Binding AnimeTitle}"
                                  ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                  SelectionMode="Single"
                                  Margin="0,15,0,0">
                            <ListView.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ListView.ItemsPanel>
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Viewbox Stretch="Uniform" MaxWidth="200">
                                        <materialDesign:Card Width="210"
                                                            Height="322">
