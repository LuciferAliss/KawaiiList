                                                            </MultiBinding>
                                                        </TextBlock.Text>

                                                    </TextBlock>

                                                    <WrapPanel Margin="0,15,0,0">
                                                        <TextBlock Text="{Binding GenresText}" 
                                                                   FontSize="12"
