<UserControl x:Class="KawaiiList.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KawaiiList.Views"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:viewModels="clr-namespace:KawaiiList.ViewModels"
             xmlns:components="clr-namespace:KawaiiList.Components" 
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             d:DataContext="{d:DesignInstance Type=viewModels:HomeViewModel}"
             mc:Ignorable="d">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    </UserControl.Resources>

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <TextBlock Text="Новинки"   
                       Foreground="{StaticResource TextColor}"
                       FontSize="30"
                       Style="{StaticResource BaseTextBlockStyle}"/>

            <ContentControl Content="{Binding AnimeCarousel}" 
                            Margin="0,10,0,0"
                            HorizontalAlignment="Center">
                <ContentControl.Resources>
                    <DataTemplate DataType="{x:Type viewModels:AnimeCarouselViewModel}">
                        <components:AnimeCarouselComponent/>
                    </DataTemplate>
                </ContentControl.Resources>
            </ContentControl>
        </StackPanel>

        <Border Grid.Row="1"
                Margin="0,40,0,0"
                BorderThickness="6"
                CornerRadius="7"
                Background="{StaticResource NavigationBarBackground}"
                BorderBrush="#252A36"
                Padding="14">

            <Grid>

                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Нововсти"   
                           Foreground="{StaticResource TextColor}"
                           FontSize="30"
                           Grid.Row="0"
                           Style="{StaticResource BaseTextBlockStyle}"/>

                <ItemsControl ItemsSource="{Binding ShikimoriTopics}"
                              Grid.Row="1">

                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>

                            <Border Padding="10"
                                    Margin="0,10,0,10"
                                    BorderThickness="6"
                                    CornerRadius="7"
                                    Background="{StaticResource MaterialDesignDarkSeparatorBackground}"
                                    BorderBrush="{StaticResource MaterialDesignLightSeparatorBackground}">

                                <Grid>

                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Text="{Binding TopicTitle}"
                                               VerticalAlignment="Center"
                                               Style="{StaticResource BaseTextBlockStyle}"
                                               Margin="10,0,0,0"
                                               Grid.Column="1"
                                               Cursor="Hand"
                                               HorizontalAlignment="Left"
                                               TextWrapping="Wrap"
                                               Foreground="{StaticResource TextColor}"
                                               FontSize="16">
                                        
                                        <i:Interaction.Triggers>
                                            <i:EventTrigger EventName="PreviewMouseDown">
                                                <i:InvokeCommandAction Command="{Binding DataContext.OpenNewsCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                       CommandParameter="{Binding}"/>
                                            </i:EventTrigger>
                                        </i:Interaction.Triggers>

                                    </TextBlock>
                                    
                                    <Grid>
                                        <Image Width="300"
                                                   Height="180"
                                                   Stretch="UniformToFill"
                                                   Source="{Binding MainMedia.ImageSource}"/>
                                        <Button HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Visibility="{Binding MainMedia.IsVideo, Converter={StaticResource BoolToVisibilityConverter}}"
                                                Command="{Binding DataContext.OpenMediaCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                CommandParameter="{Binding MainMedia.ClickUrl}">

                                            <materialDesign:PackIcon Kind="Play"/>

                                        </Button>

                                    </Grid>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
        </Border>
    </Grid>

</UserControl>