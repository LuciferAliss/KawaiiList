<UserControl x:Class="KawaiiList.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KawaiiList.Views"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:viewModels="clr-namespace:KawaiiList.ViewModels"
             xmlns:components="clr-namespace:KawaiiList.Components" 
             d:DataContext="{d:DesignInstance Type=viewModels:HomeViewModel}"
             mc:Ignorable="d">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    </UserControl.Resources>

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <TextBlock Text="Новинки"   
                       Foreground="{StaticResource TextColor}"
                       FontSize="30"
                       Style="{StaticResource BaseTextBlockStyle}"/>

            <ContentControl Content="{Binding AnimeCarousel}" 
                            Margin="0,10,0,0"
                            HorizontalAlignment="Center">
                <ContentControl.Resources>
                    <DataTemplate DataType="{x:Type viewModels:AnimeCarouselViewModel}">
                        <components:AnimeCarouselComponent/>
                    </DataTemplate>
                </ContentControl.Resources>
            </ContentControl>
        </StackPanel>

        <ItemsControl ItemsSource="{Binding ShikimoriTopics}"
                      Grid.Row="1"
                      Margin="0,20,0,0">

            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>


            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="0,0,0,20">
                        
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Text="{Binding TopicTitle}"
                                   VerticalAlignment="Center"
                                   Style="{StaticResource BaseTextBlockStyle}"
                                   Margin="10,0,0,0"
                                   Grid.Column="1"
                                   Foreground="{StaticResource TextColor}"
                                   FontSize="16"/>
                        <Grid>
                            <Image Width="300"
                                       Height="180"
                                       Stretch="UniformToFill"
                                       Source="{Binding MainMedia.ImageSource}"/>
                            <Button HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Visibility="{Binding MainMedia.IsVideo, Converter={StaticResource BoolToVisibilityConverter}}"
                                    Command="{Binding DataContext.OpenMediaCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                    CommandParameter="{Binding MainMedia.ClickUrl}">
                                
                                <materialDesign:PackIcon Kind="Play"/>
                                
                            </Button>
                            
                        </Grid>
                    </Grid>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

    </Grid>

</UserControl>