<UserControl x:Class="KawaiiList.Views.Controls.SearchControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KawaiiList.Views.Controls"
             mc:Ignorable="d"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:viewModels="clr-namespace:KawaiiList.ViewModels.SearchVM"
             d:DataContext="{d:DesignInstance Type=viewModels:SearchViewModel}">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/HandyControl;component/Themes/Theme.xaml"/>
                <hc:Theme />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <StackPanel>
        <hc:AutoCompleteTextBox Width="380"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center"
                                ItemsSource="{Binding AnimeList}"
                                Text="{Binding SearchText}">
            <hc:AutoCompleteTextBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel/>
                </ItemsPanelTemplate>
            </hc:AutoCompleteTextBox.ItemsPanel>
            <hc:AutoCompleteTextBox.ItemTemplate>
                <DataTemplate>
                    <Border Margin="5" Padding="10" Background="#FFF5F5F5" CornerRadius="5">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Постер аниме -->
                            <Image Grid.Column="0" Width="100" Height="150" Stretch="UniformToFill"
                                   Source="{Binding Posters.Small.Url}" 
                                   ToolTip="{Binding Names.Ru}"/>

                            <!-- Информация об аниме -->
                            <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                <TextBlock Text="{Binding Names.Ru}" FontWeight="Bold" FontSize="16"
                                           TextWrapping="Wrap"/>

                                <TextBlock Text="{Binding Season.String}" FontSize="12"
                                           Foreground="Gray" Margin="0,5,0,0"/>

                                <TextBlock Text="{Binding Season.Year}" FontSize="12"
                                           Foreground="Gray"/>

                                <TextBlock Text="{Binding GenresText}" FontSize="12" Margin="0,10,0,0"
                                           TextWrapping="Wrap" Foreground="#FF555555"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </DataTemplate>
            </hc:AutoCompleteTextBox.ItemTemplate>
        </hc:AutoCompleteTextBox>
    </StackPanel>
    
</UserControl>
