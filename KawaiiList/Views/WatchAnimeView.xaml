<UserControl x:Class="KawaiiList.Views.WatchAnimeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KawaiiList.Views"
             mc:Ignorable="d"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:viewmodel="clr-namespace:KawaiiList.ViewModels"
             d:DataContext="{d:DesignInstance viewmodel:WatchAnimeViewModel}"
             xmlns:vlc="clr-namespace:LibVLCSharp.WPF;assembly=LibVLCSharp.WPF"
             xmlns:materialdesign="http://materialdesigninxaml.net/winfx/xaml/themes">

    <Grid VerticalAlignment="Stretch">
        <vlc:VideoView MediaPlayer="{Binding AnimeMediaPlayer}"
                       Background="Black"
                       Height="{Binding ScreenHeight}"
                       Width="{Binding ScreenWidth}">

            <Border Padding="10"
                    VerticalAlignment="Bottom">

                <Border.Background>
                    <LinearGradientBrush StartPoint="0,1" EndPoint="0,0">
                        <GradientStop Color="#AA000000" Offset="0"/>
                        <GradientStop Color="#00000000" Offset="1" />
                    </LinearGradientBrush>
                </Border.Background>

                <Grid>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0"
                                    Margin="0,0,0,15">
                            <TextBlock Style="{StaticResource BaseTextBlockStyle}"
                                       Foreground="{StaticResource TextColor}"
                                       FontSize="17">

                                <TextBlock.Text>
                                    <MultiBinding StringFormat="Эпизод {0}">
                                        <Binding Path="Episode" />
                                    </MultiBinding>
                                </TextBlock.Text>

                            </TextBlock>

                            <TextBlock Text="{Binding NameEpisode}"
                                       Style="{StaticResource BaseTextBlockStyle}"
                                       Foreground="{StaticResource TextColor}"
                                       FontSize="11"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Bottom">

                            <TextBlock Margin="0,0,0,15"
                                       Style="{StaticResource BaseTextBlockStyle}"
                                       Foreground="{StaticResource TextColor}"
                                       FontSize="11">

                                <TextBlock.Text>
                                    <MultiBinding StringFormat="{}{0} / {1}">
                                        <Binding Path="CurrentTimeEpisode" />
                                        <Binding Path="EndTimeEpisode" />
                                    </MultiBinding>
                                </TextBlock.Text>
                                
                            </TextBlock>

                        </StackPanel>

                    </Grid>

                    <Grid Grid.Row="1">

                        <Slider Orientation="Horizontal"
                                HorizontalContentAlignment="Stretch"
                                HorizontalAlignment="Stretch"
                                Focusable="False"
                                Minimum="0"
                                Maximum="{Binding ValueEndTimeSlider}"
                                Value="{Binding ValueTimeSlider, Mode=TwoWay}">

                            <i:Interaction.Triggers>
                                <!-- Начало перетаскивания -->
                                <i:EventTrigger EventName="PreviewMouseLeftButtonDown">
                                    <i:InvokeCommandAction Command="{Binding SliderDragStartedCommand}" />
                                </i:EventTrigger>

                                <!-- Конец перетаскивания -->
                                <i:EventTrigger EventName="PreviewMouseLeftButtonUp">
                                    <i:InvokeCommandAction Command="{Binding SliderReleasedCommand}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>

                        </Slider>

                    </Grid>

                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Center"
                                    Grid.Column="1">
                            <Button Width="30"
                                    Height="30"
                                    Focusable="False">

                                <Button.Style>
                                    <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignFloatingActionButton}">
                                        <Setter Property="Background" Value="#331d5b"/>
                                        <Setter Property="BorderBrush" Value="#331d5b"/>
                                    </Style>
                                </Button.Style>

                                <materialdesign:PackIcon Kind="SkipPrevious"/>

                            </Button>

                            <Button Style="{StaticResource MaterialDesignFloatingActionButton}"
                                    Width="40"
                                    Height="40"
                                    Margin="15,0"
                                    Focusable="False"
                                    Command="{Binding TogglePlayingCommand}">

                                <materialdesign:PackIcon Kind="{Binding PlayIconKind}"
                                                         Width="35"
                                                         Height="35"/>

                            </Button>

                            <Button Width="30"
                                    Height="30"
                                    Focusable="False">

                                <Button.Style>
                                    <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignFloatingActionButton}">
                                        <Setter Property="Background" Value="#331d5b"/>
                                        <Setter Property="BorderBrush" Value="#331d5b"/>
                                    </Style>
                                </Button.Style>

                                <materialdesign:PackIcon Kind="SkipNext"/>

                            </Button>
                        </StackPanel>

                        <Grid HorizontalAlignment="Stretch"
                              VerticalAlignment="Center"
                              Grid.Column="2">

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="auto"/>
                            </Grid.ColumnDefinitions>

                            <Slider Orientation="Horizontal"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Right"
                                    Grid.Column="0"
                                    Width="100"
                                    Minimum="0"
                                    Maximum="100"
                                    Focusable="False"
                                    Value="{Binding Volume, Mode=TwoWay}"/>
                            
                            <Button Style="{StaticResource MaterialDesignIconButton}"
                                    Grid.Column="1"
                                    Width="29"
                                    Height="29">

                                <materialdesign:PackIcon Kind="VolumeHigh"
                                                         Width="20"
                                                         Height="20"/>

                            </Button>

                            <Button Style="{StaticResource MaterialDesignIconButton}"
                                    Grid.Column="2"
                                    Width="29"
                                    Height="29">

                                <materialdesign:PackIcon Kind="Settings"
                                                         Width="20"
                                                         Height="20"/>

                            </Button>

                            <Button Style="{StaticResource MaterialDesignIconButton}"
                                    Grid.Column="3"
                                    Width="29"
                                    Height="29"
                                    Command="{Binding ToggleFullscreenCommand}">

                                <materialdesign:PackIcon Kind="Fullscreen"
                                                         Width="25"
                                                         Height="25"/>

                            </Button>
                        </Grid>

                    </Grid>

                </Grid>
            </Border>

        </vlc:VideoView>
    </Grid>

</UserControl>
